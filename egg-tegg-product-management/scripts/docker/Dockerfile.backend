# 后端 Dockerfile
FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 复制 package.json 和 lock 文件
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# 安装 pnpm
RUN npm install -g pnpm

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制源代码
COPY . .

# 构建应用
RUN pnpm run tsc

# 暴露端口
EXPOSE 7001

# 设置环境变量
ENV NODE_ENV=production
ENV EGG_SERVER_ENV=prod

# 启动应用
CMD ["npm", "start"]